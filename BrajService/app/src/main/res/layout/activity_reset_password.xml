<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue"
    >

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/Gold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Gold" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="310dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundcorner4">

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:fontFamily="cursive"
        android:rotation="0"
        android:text="Reset Your Password Here"
        android:textAlignment="center"
        android:textColor="@color/Gold"
        android:textSize="40sp" />

    <Button
        android:id="@+id/resetbtn"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/resetemail"
        android:layout_marginTop="60dp"
        android:alpha="0.7"
        android:background="@drawable/roundcorner2"
        android:paddingTop="2dp"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="33dp"
        android:layout_height="40dp"
        android:background="@null"
        app:srcCompat="@drawable/usersignup"
        android:layout_alignTop="@+id/resetemail"
        android:layout_toLeftOf="@+id/resetemail"
        android:layout_toStartOf="@+id/resetemail" />

    <EditText
        android:id="@+id/resetemail"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter Your Email ID"
        android:inputType="text"
        android:textColor="@android:color/white" />

</RelativeLayout>
