<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueViolet"
    tools:context="com.example.atulkumar.brajservice.MainActivity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/Gold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Gold" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundcorner4">

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="220dp"
        android:layout_height="110dp"
        android:layout_alignEnd="@+id/login"
        android:layout_alignRight="@+id/login"
        android:layout_alignTop="@+id/relativeLayout3"
        android:layout_marginTop="7dp"
        android:fontFamily="cursive"
        android:rotation="0"
        android:text="Login Your Account"
        android:textAlignment="center"
        android:textColor="@color/Gold"
        android:textSize="40sp" />

    <Button
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/logpass"
        android:layout_marginTop="9dp"
        android:background="@null"
        android:text="Forgot Password ?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:alpha="0.7"
        android:background="@drawable/roundcorner2"
        android:paddingTop="2dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/create"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/relativeLayout3"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:layout_marginBottom="9dp"
        android:alpha="0.8"
        android:background="@null"
        android:paddingTop="3dp"
        android:text="Don't Have Account ? Sign Up Here"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="33dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/loguser"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:background="@null"
        app:srcCompat="@drawable/usersignup" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@+id/forget"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/loguser"
        app:srcCompat="@drawable/passsignup" />

    <EditText
        android:id="@+id/loguser"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logpass"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Username Or Email"
        android:inputType="text"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/logpass"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loguser"
        android:layout_alignStart="@+id/loguser"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/white" />

</RelativeLayout>
