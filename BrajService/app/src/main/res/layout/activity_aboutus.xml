        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView258"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView256"
        android:layout_marginTop="28dp"
        android:text="Email:-"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView259"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kumaratulsingh7jan@gmail.com"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView258"
        android:layout_alignBottom="@+id/textView258"
        android:layout_toRightOf="@+id/textView258"
        android:layout_toEndOf="@+id/textView258" />

    <TextView
        android:id="@+id/textView261"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorner4"
        android:fontFamily="serif"
        android:text="Thanks For Being Part Of Our Family"
        android:textAlignment="center"
        android:textColor="@color/Gold"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_above="@+id/textView255"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="9dp" />
