<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:fontFamily="cursive"
                android:text="The Owners Of \n Dhaba's"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp"
                android:textStyle="italic|bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:background="@drawable/hat" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suraj Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/namesuraj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/logout"
                            android:text="Owner Name"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numsurajowner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sonu  Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/ownersonu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/logout"
                            android:text="Owner Name"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numsonuowner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thakur Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/ownerthakur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/logout"
                            android:text="Owner Name"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numthakurowner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Punjabi Tadka Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/ownerpunjabi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/logout"
                            android:text="Owner Name"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numpanjabiowner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gopal Ji Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/ownergopal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/logout"
                            android:text="Owner Name"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numgopalowner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>