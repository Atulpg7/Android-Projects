<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:fontFamily="cursive"
                android:text=" Choose Your Favourite\n Dhaba"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp"
                android:textStyle="italic|bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:background="@drawable/hat" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suraj Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numsuraj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <Button
                            android:id="@+id/ordersuraj"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/colorsignup"
                            android:text="Order Now :)"
                            android:textAlignment="center"
                            android:textAllCaps="false" />


                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sonu Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numsonu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <Button
                            android:id="@+id/ordersonu"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/colorsignup"
                            android:text="Order Now :)"
                            android:textAlignment="center"
                            android:textAllCaps="false" />


                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thakur Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numthakur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <Button
                            android:id="@+id/orderthakur"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/colorsignup"
                            android:text="Order Now :)"
                            android:textAlignment="center"
                            android:textAllCaps="false" />


                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Punjabi Tadka Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numpanjabi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <Button
                            android:id="@+id/orderpunjabi"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/colorsignup"
                            android:text="Order Now :)"
                            android:textAlignment="center"
                            android:textAllCaps="false" />


                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gopal Ji Dhaba"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="italic|bold" />

                        <TextView
                            android:id="@+id/numgopal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/phonegray"
                            android:text="8193800247"
                            android:textSize="15dp"
                            android:textStyle="italic|bold" />

                        <Button
                            android:id="@+id/ordergopalji"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/colorsignup"
                            android:text="Order Now :)"
                            android:textAlignment="center"
                            android:textAllCaps="false" />


                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>


        </ScrollView>

    </LinearLayout>

