<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BranchSelectionActivity"
    android:background="@drawable/mainbk">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <GridLayout
                android:id="@+id/gridlayoutorder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"

                android:rowCount="6">

                <android.support.v7.widget.CardView
                    android:id="@+id/tt"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"

                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/allbranch" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    android:id="@+id/tmp3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="16dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Any Branch"
                            android:textStyle="bold|italic"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="cursive"
                            android:textSize="25dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:background="@android:color/darker_gray"
                            android:textStyle="bold|italic"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="cursive"
                            android:textSize="1dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/cstxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="CS"
                                        android:textAlignment="center"
                                        android:drawableTop="@drawable/cs"
                                        android:layout_weight="1"
                                        android:textColor="@android:color/darker_gray"/>
                                    <TextView
                                        android:id="@+id/eetxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="EE"
                                        android:textAlignment="center"
                                        android:drawableTop="@drawable/ee"
                                        android:layout_weight="1"
                                        android:textColor="@android:color/darker_gray"/>
                                    <TextView
                                        android:id="@+id/ectxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="EC"
                                        android:textAlignment="center"
                                        android:drawableTop="@drawable/ec"
                                        android:layout_weight="1"
                                        android:textColor="@android:color/darker_gray"/>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp">
                                    <TextView
                                        android:id="@+id/metxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="ME"
                                        android:textAlignment="center"
                                        android:drawableTop="@drawable/me"
                                        android:layout_weight="1"
                                        android:textColor="@android:color/darker_gray"/>
                                    <TextView
                                        android:id="@+id/cetxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="CE"
                                        android:textAlignment="center"
                                        android:drawableTop="@drawable/civil"
                                        android:layout_weight="1"
                                        android:textColor="@android:color/darker_gray"/>
                                    <TextView
                                        android:id="@+id/chtxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="CH"
                                        android:textAlignment="center"
                                        android:drawableTop="@drawable/ch"
                                        android:layout_weight="1"
                                        android:textColor="@android:color/darker_gray"/>

                                </LinearLayout>

                            </LinearLayout>








                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>



            </GridLayout>
        </LinearLayout>

</ScrollView>