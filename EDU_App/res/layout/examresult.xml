<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
     <RelativeLayout 
         android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_centerInParent="true"
            android:background="@drawable/ractangleb" >
 <TextView
        android:layout_marginLeft="15dp"
         
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHighlight="@android:color/black"
        
         android:layout_marginTop="5dp"
         />
<TextView
    
        android:id="@+id/rollno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
          android:layout_gravity="center"
           android:layout_marginTop="25dp"
              android:layout_marginLeft="15dp"
android:textColorHighlight="@color/maroon"
         />
    <TextView
        
        android:id="@+id/semester"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
         android:layout_marginTop="45dp"
         android:layout_marginLeft="15dp"
         />
</RelativeLayout>
        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
       
       <ListView android:id="@+id/gphead" 
          android:layout_marginTop="5dp"
          android:background="#3BAAE3"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
        
        >   
        </ListView>   
          
  <ListView android:id="@+id/mylist1" 
          android:layout_marginTop="45dp"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
        
        >   
        </ListView>
   
     <ListView android:id="@+id/gridView2" 
          android:layout_marginTop="80dp"
          android:background="#3BAAE3"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
        
        >   
        </ListView>
    <ListView android:id="@+id/result3" 
          android:layout_marginTop="110dp"
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content"
        
         >
         
        </ListView>
       </RelativeLayout>
</LinearLayout>