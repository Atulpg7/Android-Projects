<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

      <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:fillViewport="true"
        android:layout_below="@+id/imageView1" >
        <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:shrinkColumns="*"
         android:stretchColumns="4"  >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                  android:layout_span="3"
                  android:gravity="center_horizontal"
                android:text="SAFETY"
                android:textColor="#000"
                android:textSize="15dp" />
        </TableRow>
        
         <View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:background="@color/green2"/>
        
            <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left" >
            
                  <ImageView
                android:id="@+id/rig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/rig" />
         <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:text="Emergency Call Only - onle click will transfer your call"
                android:textSize="12dp" />
        </TableRow>
        
         
       <ImageView
                android:id="@+id/fire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="resultbut"
                android:src="@drawable/frcall" />
 			
 			<ImageView
                android:id="@+id/ragging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                 android:onClick="quiz"
                android:src="@drawable/rgcall" />
  </TableLayout>
 			<ImageView
 			    android:id="@+id/fireimg"
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:background="@null"
 			    android:src="@drawable/fire" />
         
      
        </RelativeLayout>
        </ScrollView>
        </RelativeLayout>
       