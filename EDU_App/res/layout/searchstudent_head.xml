<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:paddingTop="4dip"
     android:paddingBottom="6dip"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
      android:layout_alignParentLeft="true"
     android:orientation="horizontal">
     
<TextView
    android:id="@+id/column5"
    android:layout_width="1dip"
    android:layout_height="wrap_content"
    android:textSize="1dp"
    android:textColor="#3BAAE3" />
    
<TextView android:id="@+id/column2"
    android:layout_marginLeft="5dip"
         android:layout_width="15dp"
          android:layout_gravity="left"
            android:layout_weight="25"
             android:layout_marginRight="8dip"
            android:textColor="@android:color/white"
             android:textSize="@dimen/font_size"
         android:layout_height="wrap_content"/>

<TextView android:id="@+id/column3"
     android:layout_gravity="left"
      android:layout_width="7dp"
       android:textSize="@dimen/font_size"
        android:layout_weight="30"
          android:layout_marginRight="8dip"
            android:textColor="@android:color/white"
         android:layout_height="wrap_content"/>

<TextView
    android:id="@+id/column4"
    android:layout_width="1dip"
    android:layout_height="wrap_content"
    android:textSize="1dp"
    android:textColor="#3BAAE3" />

<TextView android:id="@+id/column1"
     android:layout_gravity="left"
      android:layout_width="8dp"
          android:layout_marginRight="5dip"
           android:textSize="@dimen/font_size"
            android:layout_weight="25"
            android:textColor="@android:color/white"
         android:layout_height="wrap_content"/>

<TextView
    android:id="@+id/column6"
    android:layout_width="15dp"
    android:layout_height="wrap_content"
      android:layout_weight="30"
       android:textSize="@dimen/font_size"
    android:layout_gravity="right"
    android:textColor="@android:color/white" />

<TextView
    android:id="@+id/column7"
    android:layout_width="1dip"
    android:layout_height="wrap_content"
    android:textSize="1dp"
    android:textColor="#3BAAE3" />

<TextView
    android:id="@+id/column8"
    android:layout_width="1dip"
    android:layout_height="wrap_content"
    android:textSize="1dp"
    android:textColor="#3BAAE3" />

<TextView
    android:id="@+id/column9"
    android:layout_width="9dp"
    android:layout_height="wrap_content"
      android:layout_weight="30"
       android:textSize="@dimen/font_size"
    android:layout_gravity="right"
    android:textColor="@android:color/white" />



</LinearLayout>
