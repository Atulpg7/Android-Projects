<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
 <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:hint="Department Name"
        android:entries="@array/dp1"
        android:prompt="@string/dp" />
 
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:entries="@array/cou1"
        android:prompt="@string/cou" />
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:entries="@array/thi1"
        android:prompt="@string/thi" />
     <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:entries="@array/fo1"
        android:prompt="@string/fo" />
     
      <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/tableRow1"
        android:layout_below="@+id/tableRow1"
       android:background="@drawable/ractangleb"
        android:ems="10"
        android:hint="Write Message Here"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:scrollbars="vertical" >
        <requestFocus />
    </EditText>
     
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:gravity="center"
        android:text="Submit"
      
        />
      
       
       <TextView
        android:id="@+id/count2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="600dp"
         android:layout_marginLeft="130dp"
           android:text="T"
            android:layout_gravity="center"
           android:textColor="@color/white"
        android:textSize="10dp"
         />
    
     </LinearLayout>
    </ScrollView> 
</LinearLayout>