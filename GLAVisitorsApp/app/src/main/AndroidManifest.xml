<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.atulkumar.glavisitorsapp"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/collegelogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/collegelogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:windowSoftInputMode="adjustPan|adjustResize" />
                <category
                    android:name="android.intent.category.LAUNCHER"
                    android:windowSoftInputMode="adjustPan|adjustResize" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GuardArea"
            android:windowSoftInputMode="adjustResize|stateVisible|stateAlwaysHidden" />
        <activity
            android:name=".MainArea"
            android:windowSoftInputMode="adjustResize|stateVisible|stateAlwaysHidden" />
        <activity
            android:name=".AboutUsActivity"
            android:windowSoftInputMode="adjustResize|stateVisible|stateAlwaysHidden" />
        <activity android:name=".Old_RecordsActivity" />
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible|stateAlwaysHidden"></activity>
        <activity android:name=".RulesActivity">

        </activity>

    </application>

</manifest>