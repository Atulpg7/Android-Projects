<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakshi.new_notezzzz.ce_th_act"   android:background="@drawable/first">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="652dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="379dp"
                android:layout_height="140dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.06"
                app:srcCompat="@drawable/civil" />


            <Button
                android:id="@+id/ch_th"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text=" soil mechanics" />

            <Button
                android:id="@+id/math_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text=" engineering geology" />

            <Button
                android:id="@+id/chemistry_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="highway engineering" />


            <Button
                android:id="@+id/physics_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="design of steel structure" />

            <Button
                android:id="@+id/foc"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="estimation and coasting" />

            <Button
                android:id="@+id/mechanics"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="repair and maintena of building" />

            <Button
                android:id="@+id/english_ii"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="earthquake engineering" />

            <Button
                android:id="@+id/math_ii"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="railway bridge and tunnels" />

            <Button
                android:id="@+id/chemistry_ii"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="construction management and account" />




        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
