<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/first"
    >


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="652dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="378dp"
                android:layout_height="150dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/enh"
                android:layout_weight="0.16" />


            <Button
                android:id="@+id/english_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:text=" English   I"
                android:layout_weight="0.07" />

            <Button
                android:id="@+id/math_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:text=" Maths  I" />

            <Button
                android:id="@+id/chemistry_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/button"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:text="Chemistry I" />


            <Button
                android:id="@+id/physics_i"
                android:layout_width="match_parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:text="Physics I" />

            <Button
                android:id="@+id/foc"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="foc" />

            <Button
                android:id="@+id/mechanics"
                android:layout_width="match_parent"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Mechanics" />

            <Button
                android:id="@+id/english_ii"
                android:layout_width="match_parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:text="English II"
                android:background="@drawable/button"


                />

            <Button
                android:id="@+id/math_ii"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:text="Maths II" />

            <Button
                android:id="@+id/chemistry_ii"
                android:layout_width="match_parent"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Chemistry  II" />


            <Button
                android:id="@+id/physics_ii"
                android:layout_width="match_parent"
                android:background="@drawable/button"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:text="Physics  II" />





        </LinearLayout>

    </ScrollView>

</RelativeLayout>