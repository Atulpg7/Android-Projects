<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakshi.new_notezzzz.cs_sec_act"
    android:background="@drawable/first">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="652dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="378dp"
                android:layout_height="134dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/cs_sec" />


            <Button
                android:id="@+id/c_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text=" programming in c" />

            <Button
                android:id="@+id/os_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text=" operating system" />

            <Button
                android:id="@+id/dbms_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="dbms" />


            <Button
                android:id="@+id/chm_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="computer hardware" />

            <Button
                android:id="@+id/de_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="Digital electronics" />

            <Button
                android:id="@+id/ds_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="Data structure using c" />

            <Button
                android:id="@+id/oops_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="oops using c++"


                />

            <Button
                android:id="@+id/cg_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="computer graphics" />

            <Button
                android:id="@+id/co_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="computer organization" />


            <Button
                android:id="@+id/mis_sec"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="mis" />





        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
