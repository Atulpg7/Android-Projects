<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakshi.new_notezzzz.ec_sec_act"
    android:background="@drawable/first">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="652dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="378dp"
                android:layout_height="134dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/cs_sec" />

            <Button
                android:id="@+id/ch_th"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text=" digital electronics" />

            <Button
                android:id="@+id/math_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="basic electrical" />

            <Button
                android:id="@+id/chemistry_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="basic electronics" />


            <Button
                android:id="@+id/physics_i"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="electronics  instrument and measurment" />

            <Button
                android:id="@+id/foc"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="analog communication engineering" />

            <Button
                android:id="@+id/mechanics"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="electronics devices and circuits" />

            <Button
                android:id="@+id/english_ii"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="instrumnt and control engineering"


                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/button"
                android:layout_weight="0.07"
                android:text="microprocessor" />




        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
